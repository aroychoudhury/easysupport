<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="true">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>

	<appender name="normal-log" class="org.apache.log4j.FileAppender">
		<param name="File" value="normal.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.StringMatchFilter">
			<param name="StringToMatch" value="GARM:9" />
			<param name="AcceptOnMatch" value="false" />
		</filter>
	</appender>

	<appender name="restricted-log" class="org.apache.log4j.FileAppender">
		<param name="Append" value="false" />
		<param name="File" value="restricted.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.StringMatchFilter">
			<param name="StringToMatch" value="GARM:9" />
			<param name="AcceptOnMatch" value="true" />
		</filter>

		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<logger name="org.abhishek.concept.trials.log">
		<appender-ref ref="normal-log" />
		<appender-ref ref="restricted-log" />
	</logger>

	<root>
		<level value="trace" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>


